#:kivy 1.0.9

<ThrustersImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            source: 'RCSJetCode.png'
            size: self.size
            pos: self.pos

<ThrusterGroupControl>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          
            on_touch_down: root.app.statechart.sendEvent(self.id)

<RotationalMotionControl>:
    size: 46, 70 
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size          
            on_touch_down: root.app.statechart.sendEvent(self.id)

<TranslationalMotionControl>:
    size: 46, 70 
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size          
            on_touch_down: root.app.statechart.sendEvent(self.id)

