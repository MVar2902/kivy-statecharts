#:kivy 1.0.9

# Thanks to quanon for how to do the list with a template as a child
# of another widget. This list of thrusters and pulsation values goes 
# on the left side of the display.
#
[ThrustersItem@BoxLayout]:
    lbl: lbl
    canvas.before:
        Color:
            rgba: (1, 0, 1, .5) if self.parent and (len(self.parent.children) % 2 == 1) else (0, 0, 0, .5)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (1, 1, 1, 1)
    Label:
        id: lbl
        color: 0, 0, 0, 1
        text: ctx.thruster_id
    Label:
        color: 0, 1, 0, 1
        text: ctx.pulsation

<ThrustersListView>:
    canvas:
        Color:
            rgb: (.4, .3, .2)
        Rectangle:
            size: self.size
            pos: self.pos

    size: 100, 714
    pos: 0, 0
    thrusters_item: thrusters_item
    orientation: 'vertical'
    size: thrusters_item.lbl.texture_size[0], thrusters_item.lbl.texture_size[1]* len(self.children)
    ThrustersItem:
        id: thrusters_item
        thruster_id: 'self.thruster_id'
        pulsation: 'self.pulsation'

# From here down, are components of the display that sit atop
# the 600 x 714 background image. All of these components will
# be part of the ShuttleControlView widget, defined last.

<ThrusterGroupControl>:
    canvas:
        Color:
            rgb: .8, .2, .2
        Ellipse:
            pos: self.pos
            size: self.size

<RotationalMotionControl>:
    canvas:
        Color:
            rgb: .2, .2, .8, .5
        Ellipse:
            pos: self.pos
            size: 20, 20
        #Rectangle:
            #pos: self.pos
            #size: self.size

<TranslationalMotionControl>:
    canvas:
        Color:
            rgb: .2, .2, .8, .5
        Ellipse:
            pos: self.pos
            size: 20, 20
        #Rectangle:
            #pos: self.pos
            #size: self.size

<ThrusterControlModeSwitch>:
    active_norm_pos: max(0., min(1., (int(self.active) + self.touch_distance / 41)))
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'thruster-control-switch-background.png'
            size: 83, 32
            pos: int(self.center_x - 41), int(self.center_y - 16)
        Rectangle:
            source: 'thruster-control-switch-button.png'
            size: 43, 32
            pos: int(self.center_x - 41 + self.active_norm_pos * 41), int(self.center_y - 16)

# A grid style layout of pulsation values. These elements will go in ThrustersGridView.
#
[HSeparator@Label]:
    size_hint_y: None
    height: 17
    text: ctx.text if 'text' in ctx else ''
    text_size: self.size
    valign: 'middle'
    halign: 'center'
    canvas.before:
        Color:
            rgba: .4, .3, .2, .8
        Rectangle:
            size: self.size
            pos: self.pos

[ThrusterLabel@Label]:
    size_hint_y: None
    height: 17
    text: ctx.text if 'text' in ctx else ''
    text_size: self.size
    valign: 'middle'
    halign: 'center'
    canvas.before:
        Color:
            rgba: .2, .2, .2, .8
        Rectangle:
            size: self.size
            pos: self.pos

